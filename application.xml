<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="StablexUI Playground3" package="StablexUIPlayground3" version="1.0.0" company="" />
	
	<!-- output -->
	<app main="Main" file="StablexUIPlayground3" path="bin" />
	
	<window background="#FFFFFF" fps="60" />
	<window width="1024" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath to my source -->
	<source path="src" />
	
	<!-- IMPORTANT !!
	<source path="to\my\fork\of\StablexUI\src" />
		as seen below 
		points to
		https://github.com/mpoint4u/StablexUI/commits/master
	-->
	<source path="..\StablexUI\src" />
	
	<!--<haxelib name="stablexui" />   ...not using the standard version here!! -->	
	
	<!-- all 'standard' active haxelib libraries in use -->
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="hscript" />
	
	<!-- assets -->
	<icon path="assets/nme.svg" />
	
	<!-- optimize output -->
	<haxeflag name="--dead-code-elimination" unless="haxe3" />
	
</project>